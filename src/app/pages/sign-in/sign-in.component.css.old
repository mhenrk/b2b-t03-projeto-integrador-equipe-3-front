* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
.ng-valid[required], 
.ng-valid.required {
    border-left: 5px solid #42A948; /* green */
}

.ng-invalid:not(form)  {
    border-left: 5px solid #D9D9D9; /* cinza */
}
.arealogin input{
    max-width: 360px;
    width: 360px;
    height: 50px;
    border-radius: 0 10px 10px 0;
    background: linear-gradient(90deg, #E4E3E3 0%, #E8E4E4 0.01%, #FFF 100%);
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25) inset;
}

.fundoIn {
    background: #D9D9D9;
    background-image: url("../../../assets/Ellipse.svg");
    background-repeat: no-repeat;
    background-size: 80% 100%;
    width: 100vw;
    height: 100vh;
}

.row {
    height: 100vh;
}

.fonte {
    margin-top: -60px;
    margin-bottom: 30px;
    color: #FFFBFB;
    text-align: center;
    text-shadow: 1px 1px 2px rgb(99, 99, 99);
}

.title img {
    margin: 0;
    position: absolute;
    bottom: 45%;
    left: 5%;
    width: 280px;
}

.esferaLogin {
    width: 480px;
    height: 480px;
    border-radius: 750px;
    background: rgba(133, 181, 252, 0.95);
    background-repeat: no-repeat;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    flex-shrink: 0;
    margin-top: 44px;
}

.input-group-text {
    height: 50px;
    width: 30px;
    font-size: 25px;
    font-family: Inter;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    border-radius: 10px 0 0 10px;
    background: linear-gradient(90deg, #E4E3E3 0%, #E8E4E4 0.01%);
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25) inset;
    color: #b1b1b1 !important;
}

input {
    color: #616161;
    font-size: 25px;
    font-family: Inter;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    padding: 10px;
}

input::-webkit-input-placeholder {
    color: #b1b1b1 !important;
}

button,
a {
    width: 180px;
    height: 50px;
    font-size: 22px;
    margin-top: 20px;
    text-shadow: 1px 1px 2px rgb(99, 99, 99);
}

.btnLeft {
    margin-right: 20px;
}

.btncadastro {
    padding: 7px;
}

@media (max-width: 768px) {
    .fundoIn {
        background-image: url("../../../assets/EllipseCell.svg") !important;
        background-size: 70% 100% !important;
        overflow-x: hidden;
    }

    .layoutlogin {
        width: 90% !important;
        height: 60% !important;
        flex-shrink: 0;
        margin-top: 12px;
    }

    .esferaLogin {
        max-width: 85%;
        max-height: 40%;
    }

    .arealogin input {
        width: 240px !important;
        height: 25px;
    }

    .input-group-text {
        height: 25px !important;
        width: 30px;
        font-size: 15px;
        border-radius: 5px 0 0 5px !important;
    }

    .input-group-text img {
        width: 10px;
    }

    .title img {
        margin: 0;
        position: absolute;
        top: 60px;
        bottom: 0;
        left: 0;
        width: 180px;
    }
    button,
    a {
        width: 100px;
        height: 30px;
        font-size: 14px;
        margin-top: 20px !important;
        text-shadow: 1px 1px 2px rgb(99, 99, 99);
    }

    input {
        color: #616161;
        font-size: 15px;
        padding: 5px;
    }

    .btncadastro {
        padding: 5px;
    }
}
@media (min-width: 769px) and (max-width: 1224px) and (orientation: portrait){

    .title img {
        margin: 0;
        position: absolute;
        top: 60px;
        bottom: 0;
        left: 0;
        width: 180px;
    }
    .esferaLogin {
        width: 60%;
        height: 40%;
    }
    .fundoIn {
        background-image: url("../../../assets/EllipseCell.svg") !important;
        background-size: 70% 100% !important;
        overflow-x: hidden;
    }
    .arealogin input {
        width: 640px !important;
        height: 60px;
    }
}
